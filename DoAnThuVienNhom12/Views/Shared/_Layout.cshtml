@{
    Layout = null;
    var title = ViewBag.Title ?? "DoAnThuVienNhom12";
}

@functions{
    // helper: gán class "active" theo controller/action hiện tại
    public string IsActive(string ctrl, string act = null)
    {
        var rd = ViewContext.RouteData.Values;
        var c = (rd["controller"] ?? "").ToString();
        var a = (rd["action"] ?? "").ToString();
        if (!string.IsNullOrEmpty(act))
            return (c.Equals(ctrl, System.StringComparison.OrdinalIgnoreCase)
                 && a.Equals(act, System.StringComparison.OrdinalIgnoreCase)) ? "active" : "";
        return c.Equals(ctrl, System.StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap 3.4.1 + Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- jQuery UI CSS (cho Autocomplete/Slider dùng trong Phiếu) -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

    <!-- CSS của dự án -->
    <link rel="stylesheet" href="@Url.Content("~/Content/site.css")" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainNav">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <i class="fa fa-book"></i> Thư viện
                </a>
            </div>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="nav navbar-nav">
                    <li class="@IsActive("Home","Index")">
                        <a href="@Url.Action("Index","Home")">
                            <i class="fa fa-home"></i> Trang chủ
                        </a>
                    </li>

                    <li class="@IsActive("DanhMuc")">
                        <a href="@Url.Action("Index","DanhMuc")">
                            <i class="fa fa-folder"></i> Danh mục
                        </a>
                    </li>

                    <!-- Dropdown: Quản lý sách -->
                    <li class="dropdown @(IsActive("Sach") == "active" ? "active" : "")">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true">
                            <i class="fa fa-book"></i> Quản lý sách <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="@IsActive("Sach","Index")">
                                <a href="@Url.Action("Index","Sach")">
                                    <i class="fa fa-search"></i> Tìm kiếm sách
                                </a>
                            </li>
                            <li class="@IsActive("Sach","Edit")">
                                <a href="@Url.Action("Edit","Sach")">
                                    <i class="fa fa-edit"></i> Cập nhật sách
                                </a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li class="@IsActive("KeSach")">
                                <a href="@Url.Action("Index","KeSach")">
                                    <i class="fa fa-th"></i> Quản lý kệ sách
                                </a>
                            </li>
                            <li class="@IsActive("Kho")">
                                <a href="@Url.Action("Index","Kho")">
                                    <i class="fa fa-warehouse"></i> Quản lý kho
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Dropdown: Mượn/Trả -->
                    <li class="dropdown @(IsActive("MuonTra") == "active" ? "active" : "")">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true">
                            <i class="fa fa-exchange"></i> Mượn/Trả <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="@IsActive("MuonTra","PhieuMuon")">
                                <a href="@Url.Action("PhieuMuon","MuonTra")">
                                    <i class="fa fa-download"></i> Phiếu mượn
                                </a>
                            </li>
                            <li class="@IsActive("MuonTra","PhieuTra")">
                                <a href="@Url.Action("PhieuTra","MuonTra")">
                                    <i class="fa fa-upload"></i> Phiếu trả
                                </a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li class="@IsActive("MuonTra","Index")">
                                <a href="@Url.Action("Index","MuonTra")">
                                    <i class="fa fa-list"></i> Danh sách phiếu
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="@IsActive("NhanVien")">
                        <a href="@Url.Action("Index","NhanVien")">
                            <i class="fa fa-users"></i> Nhân viên
                        </a>
                    </li>

                    <li class="@IsActive("NguoiDung")">
                        <a href="@Url.Action("Index","NguoiDung")">
                            <i class="fa fa-sign-in"></i> Đăng nhập
                        </a>
                    </li>
                </ul>

                <!-- Right side menu -->
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            <i class="fa fa-cog"></i> Tiện ích <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="@IsActive("KeSach")">
                                <a href="@Url.Action("Index","KeSach")">
                                    <i class="fa fa-th"></i> Kệ sách
                                </a>
                            </li>
                            <li class="@IsActive("Kho")">
                                <a href="@Url.Action("Index","Kho")">
                                    <i class="fa fa-warehouse"></i> Quản lý kho
                                </a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-bar-chart"></i> Báo cáo
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-cogs"></i> Cài đặt
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-muted">
            <p class="text-center">&copy; @DateTime.Now.Year - Hệ thống Quản lý Thư viện</p>
        </footer>
    </div>

    <!-- jQuery + Bootstrap + jQuery UI (đặt cuối body) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <!-- Lưu ý: dùng "Scripts" viết hoa để khớp với các view -->
    @RenderSection("Scripts", required: false)
</body>
</html>
