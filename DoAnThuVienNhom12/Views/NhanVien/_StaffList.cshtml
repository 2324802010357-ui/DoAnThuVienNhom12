@model IEnumerable<DoAnThuVienNhom12.Models.NhanVien>

<div class="row">
    @foreach (var nv in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="staff-card d-flex align-items-center">
                <div class="avatar-circle" style="background:@("linear-gradient(135deg, #667eea, #764ba2)")">
                    @(nv.HoTen?.Split(' ').Last().Substring(0,1).ToUpper())
                </div>
                <div style="flex:1">
                    <h6 class="mb-1">@nv.HoTen</h6>
                    <small class="text-muted">@nv.ChucVu - @nv.PhongBan</small><br />
                    <small><i class="fa fa-envelope"></i> @nv.Email</small><br />
                    <small><i class="fa fa-phone"></i> @nv.SoDienThoai</small>
                </div>
                <div class="ms-2">
                    <button class="btn btn-sm btn-outline-primary" onclick="editEmployee('@nv.MaNhanVien')">
                        <i class="fa fa-pen"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" onclick="deleteEmployee('@nv.MaNhanVien')">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>
