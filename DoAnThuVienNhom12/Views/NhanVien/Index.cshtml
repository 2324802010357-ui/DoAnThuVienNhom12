@model IEnumerable<DoAnThuVienNhom12.Models.NhanVien>
@{
    ViewBag.Title = "Quản lý nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .search-box {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 12px;
        overflow: hidden;
        padding: 5px 10px;
        background: #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

        .search-box input {
            border: none;
            outline: none;
            flex: 1;
            padding: 8px 10px;
        }

    .staff-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.2s ease;
    }

        .staff-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    .avatar-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 20px;
        margin-right: 15px;
    }

    .btn-add {
        border: none;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 12px;
        transition: 0.2s;
    }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(118,75,162,0.3);
        }

    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h3><i class="fa fa-users"></i> Quản lý nhân viên</h3>
        <button class="btn-add" onclick="openAddModal()">
            <i class="fa fa-plus"></i> Thêm nhân viên
        </button>
    </div>

    <div class="search-box mb-3">
        <i class="fa fa-search" style="color:#667eea;"></i>
        <input type="text" id="searchTerm" placeholder="Tìm kiếm nhân viên theo tên, phòng ban, chức vụ...">
    </div>

    <div id="staffList">
        @Html.Partial("_StaffList", Model)
    </div>
</div>

<!-- ========== MODAL THÊM / SỬA NHÂN VIÊN ========== -->
<div class="modal fade" id="staffModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">Thêm nhân viên</h5>
            </div>

            <div class="modal-body">
                <form id="staffForm">
                    <input type="hidden" id="MaNhanVien" name="MaNhanVien" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Họ tên</label>
                            <input type="text" id="HoTen" name="HoTen" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Chức vụ</label>
                            <input type="text" id="ChucVu" name="ChucVu" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Phòng ban</label>
                            <input type="text" id="PhongBan" name="PhongBan" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Số điện thoại</label>
                            <input type="text" id="SoDienThoai" name="SoDienThoai" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Trạng thái</label>
                            <select id="TrangThai" name="TrangThai" class="form-control">
                                <option value="Đang làm việc">Đang làm việc</option>
                                <option value="Nghỉ phép">Nghỉ phép</option>
                                <option value="Đã nghỉ việc">Đã nghỉ việc</option>
                            </select>
                        </div>
                        <div class="col-12 mb-3">
                            <label>Địa chỉ</label>
                            <input type="text" id="DiaChi" name="DiaChi" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button class="btn btn-primary" id="btnSave">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    // 🔍 Tìm kiếm realtime
    $("#searchTerm").on("keyup", function () {
        var term = $(this).val();
        $.post("@Url.Action("Search", "NhanVien")", { searchTerm: term }, function (data) {
            $("#staffList").html(data);
        });
    });

    // ➕ Mở modal thêm nhân viên
    function openAddModal() {
        $("#staffForm")[0].reset();
        $("#MaNhanVien").val("");
        $(".modal-title").text("Thêm nhân viên");
        $("#staffModal").modal("show");
    }

    // ✏️ Mở modal sửa nhân viên
    function editEmployee(id) {
        $.get("@Url.Action("GetEmployee", "NhanVien")", { maNV: id }, function (res) {
            if (res.success) {
                for (let key in res.data) {
                    $("#" + key).val(res.data[key]);
                }
                $(".modal-title").text("Cập nhật nhân viên");
                $("#staffModal").modal("show");
            } else {
                alert(res.message);
            }
        });
    }

    // 💾 Lưu thêm hoặc sửa
    $("#btnSave").click(function () {
        var formData = $("#staffForm").serialize();
        var id = $("#MaNhanVien").val();
        var actionUrl = id ? "@Url.Action("Edit", "NhanVien")" : "@Url.Action("Add", "NhanVien")";

        $.post(actionUrl, formData, function (res) {
            alert(res.message);
            if (res.success) {
                $("#staffModal").modal("hide");
                location.reload();
            }
        });
    });

    // ❌ Xóa nhân viên
    function deleteEmployee(id) {
        if (confirm("Bạn có chắc chắn muốn xóa nhân viên này không?")) {
            $.post("@Url.Action("Delete", "NhanVien")", { id: id }, function (res) {
                alert(res.message);
                if (res.success) location.reload();
            });
        }
    }
    </script>
}
