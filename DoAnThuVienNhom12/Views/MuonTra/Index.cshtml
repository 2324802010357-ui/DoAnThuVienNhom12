@model IEnumerable<DoAnThuVienNhom12.Models.PhieuMuon>

@{
    ViewBag.Title = "Quản lý mượn - trả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animate-fade-in">

    <!-- ============================== -->
    <!-- TIÊU ĐỀ -->
    <!-- ============================== -->
    <div class="page-header">
        <h2><i class="fa fa-exchange"></i> @ViewBag.Title</h2>
        <p class="lead">Quản lý hoạt động mượn – trả sách của thư viện</p>
    </div>

    <!-- ============================== -->
    <!-- DASHBOARD -->
    <!-- ============================== -->
    <div class="row text-center">

        <!-- ĐANG MƯỢN -->
        <div class="col-md-3">
            <a href="@Url.Action("DangMuon","MuonTra")" style="text-decoration:none;">
                <div class="library-card">
                    <div class="staff-avatar" style="background: linear-gradient(135deg,#3498db,#2980b9);">
                        <i class="fa fa-book"></i>
                    </div>
                    <h4>Đang mượn</h4>
                    <h2 class="text-primary">@ViewBag.DangMuon</h2>
                </div>
            </a>
        </div>

        <!-- QUÁ HẠN -->
        <div class="col-md-3">
            <a href="@Url.Action("QuaHan","MuonTra")" style="text-decoration:none;">
                <div class="library-card">
                    <div class="staff-avatar" style="background: linear-gradient(135deg,#e74c3c,#c0392b);">
                        <i class="fa fa-clock-o"></i>
                    </div>
                    <h4>Quá hạn</h4>
                    <h2 class="text-danger">@ViewBag.QuaHan</h2>
                </div>
            </a>
        </div>

        <!-- ĐÃ TRẢ -->
        <div class="col-md-3">
            <a href="@Url.Action("DaTraDanhSach","MuonTra")" style="text-decoration:none;">
                <div class="library-card">
                    <div class="staff-avatar" style="background: linear-gradient(135deg,#27ae60,#2ecc71);">
                        <i class="fa fa-check"></i>
                    </div>
                    <h4>Đã trả</h4>
                    <h2 class="text-success">@ViewBag.DaTra</h2>
                </div>
            </a>
        </div>

        <!-- PHÍ PHẠT -->
        <div class="col-md-3">
            <a href="@Url.Action("PhiPhat","MuonTra")" style="text-decoration:none;">
                <div class="library-card">
                    <div class="staff-avatar" style="background: linear-gradient(135deg,#f39c12,#e67e22);">
                        <i class="fa fa-money"></i>
                    </div>
                    <h4>Phí phạt</h4>

                    <h2 class="text-warning">
                        @String.Format("{0:N0} đ", ViewBag.PhiPhat == null ? 0 : ViewBag.PhiPhat)
                    </h2>

                </div>
            </a>
        </div>

    </div>

    <!-- ============================== -->
    <!-- TAB DANH SÁCH -->
    <!-- ============================== -->
    <div class="library-card" style="margin-top:25px;">

        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
                <a href="#phieuMuonTab" role="tab" data-toggle="tab">
                    <i class="fa fa-arrow-right"></i> Phiếu mượn
                </a>
            </li>

            <li role="presentation">
                <a href="#phieuTraTab" role="tab" data-toggle="tab">
                    <i class="fa fa-arrow-left"></i> Phiếu trả
                </a>
            </li>
        </ul>


        <div class="tab-content" style="padding:20px;">


            <!-- ========================= -->
            <!-- TAB PHIẾU MƯỢN -->
            <!-- ========================= -->
            <div role="tabpanel" class="tab-pane active" id="phieuMuonTab">

                <div class="row" style="margin-bottom:20px;">

                  

                   

                    <div class="col-md-2">
                        <button class="btn btn-success btn-block"
                                onclick="location.href='@Url.Action("PhieuMuon","MuonTra")'">
                            <i class="fa fa-plus"></i> Tạo phiếu mượn
                        </button>
                    </div>

                </div>

                <div id="phieuMuonContainer">
                    @Html.Partial("_PhieuMuonList", Model)
                </div>
            </div>



            <!-- ========================= -->
            <!-- TAB PHIẾU TRẢ -->
            <!-- ========================= -->
            <div role="tabpanel" class="tab-pane" id="phieuTraTab">

                <div class="row" style="margin-bottom:20px;">

                   

                    <div class="col-md-2">
                        <button class="btn btn-success btn-block"
                                onclick="location.href='@Url.Action("PhieuTra","MuonTra")'">
                            <i class="fa fa-plus"></i> Tạo phiếu trả
                        </button>
                    </div>

                </div>


                <div id="phieuTraContainer">
                    @Html.Partial(
                        "_PhieuTraList",
                        ViewBag.DanhSachPhieuTra as IEnumerable<DoAnThuVienNhom12.Models.PhieuTra>
                    )
                </div>

            </div>


        </div>
    </div>

</div>
