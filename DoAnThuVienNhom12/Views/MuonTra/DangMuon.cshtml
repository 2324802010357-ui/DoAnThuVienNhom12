@model IEnumerable<DoAnThuVienNhom12.Models.PhieuMuon>

<div class="panel panel-primary" style="margin-top:20px;">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="fa fa-book"></i> Danh sách phiếu mượn – Đang mượn
        </h3>
    </div>

    <div class="panel-body">

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                <i class="fa fa-info-circle"></i> Không có độc giả nào đang mượn sách.
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead style="background:#e6f2ff;">
                    <tr>
                        <th style="width:90px;">Mã phiếu</th>
                        <th>Độc giả</th>
                        <th style="width:120px;">Ngày mượn</th>
                        <th style="width:120px;">Hạn trả</th>
                        <th style="width:110px;">Trạng thái</th>
                        <th style="width:90px;">SL sách</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model)
                    {
                        var docGia = p.DocGia;

                        <tr>
                            <!-- Mã phiếu -->
                            <td class="text-center">
                                <strong>@p.MaPhieuMuon</strong>
                            </td>

                            <!-- Độc giả -->
                            <td>
                                <strong>@(docGia != null ? docGia.HoTen : "Không rõ")</strong><br />
                                <span class="text-muted">
                                    MSSV: @(docGia != null ? docGia.MaSinhVien : "")
                                </span>
                            </td>

                            <!-- Ngày mượn -->
                            <td class="text-center">
                                @(p.NgayMuon.HasValue ? p.NgayMuon.Value.ToString("dd/MM/yyyy") : "")
                            </td>

                            <!-- Hạn trả -->
                            <td class="text-center">
                                @(p.NgayHenTra.HasValue ? p.NgayHenTra.Value.ToString("dd/MM/yyyy") : "")
                            </td>

                            <!-- Trạng thái -->
                            <td class="text-center">
                                @if (p.TrangThai == "Quá hạn")
                                {
                                    <span class="label label-danger" style="font-size:13px;">
                                        Quá hạn
                                    </span>
                                }
                                else
                                {
                                    <span class="label label-warning" style="font-size:13px;">
                                        Đang mượn
                                    </span>
                                }
                            </td>

                            <!-- SL sách -->
                            <td class="text-center">@p.SoLuongSach</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
