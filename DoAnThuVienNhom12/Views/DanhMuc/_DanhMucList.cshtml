@model List<DoAnThuVienNhom12.Controllers.DanhMucSachModel>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Mã Danh Mục</th>
                <th>Tên Danh Mục</th>
                <th>Mô Tả</th>
                <th>Số Lượng Sách</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var danhMuc in Model)
                {
                    <tr data-category-id="@danhMuc.MaDanhMuc">
                        <td><strong>@danhMuc.MaDanhMuc</strong></td>
                        <td>
                            <div class="media">
                                <div class="media-left">
                                    <div class="category-icon" style="background: linear-gradient(135deg, #3498db, #2980b9);">
                                        <i class="fa fa-folder"></i>
                                    </div>
                                </div>
                                <div class="media-body">
                                    <strong>@danhMuc.TenDanhMuc</strong>
                                </div>
                            </div>
                        </td>
                        <td>@danhMuc.MoTa</td>
                        <td><span class="badge badge-info">@danhMuc.SoLuongSach</span></td>
                        <td>
                            @if (danhMuc.TrangThai == "Hoat Dong")
                            {
                                <span class="label label-success">@danhMuc.TrangThai</span>
                            }
                            else
                            {
                                <span class="label label-warning">@danhMuc.TrangThai</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-xs btn-primary btn-edit-category" 
                                    title="Sửa Danh Mục" 
                                    data-category-id="@danhMuc.MaDanhMuc">
                                <i class="fa fa-edit"></i>
                            </button>
                            <button class="btn btn-xs btn-danger btn-delete-category" 
                                    title="Xóa Danh Mục" 
                                    data-category-id="@danhMuc.MaDanhMuc"
                                    data-category-name="@danhMuc.TenDanhMuc">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <div class="alert alert-info" style="margin: 20px;">
                            <i class="fa fa-search"></i> Kh?ng t?m th?y danh m?c n?o ph? h?p v?i t? kh?a t?m ki?m
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .category-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 16px;
        margin-right: 10px;
    }
    
    .badge-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 4px 8px;
        font-size: 12px;
    }
</style>