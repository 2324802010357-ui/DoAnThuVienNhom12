@model DoAnThuVienNhom12.Models.Sach

@{
    ViewBag.Title = "Chi tiết sách";
}

<h2><i class="fa fa-info-circle"></i> THÔNG TIN CHI TIẾT SÁCH</h2>
<hr />

<div class="row">
    <div class="col-md-3 text-center">
        <img src="@Model.AnhBia" alt="Ảnh bìa" class="img-thumbnail" style="max-width:200px; max-height:250px;" />
    </div>

    <div class="col-md-9">
        <p><strong>Tên sách:</strong> @Model.TenSach</p>
        <p><strong>Tác giả:</strong> @(Model.TacGia?.TenTacGia ?? "—")</p>
        <p><strong>Danh mục:</strong> @(Model.DanhMuc?.TenDanhMuc ?? "—")</p>
        <p><strong>Nhà xuất bản:</strong> @(Model.NhaXuatBan?.TenNXB ?? "—")</p>
        <p><strong>Năm xuất bản:</strong> @Model.NamXuatBan</p>
        <p><strong>Số trang:</strong> @Model.SoTrang</p>
        <p><strong>Ngôn ngữ:</strong> @Model.NgonNgu</p>
        <p><strong>Tình trạng:</strong> @Model.TinhTrang</p>
        <p><strong>Số lượng còn:</strong> @Model.SoLuong</p>
        <p><strong>Mô tả:</strong> @Model.MoTa</p>
    </div>
</div>

<hr />
<a href="@Url.Action("Index", "Sach")" class="btn btn-default">
    <i class="fa fa-arrow-left"></i> Quay lại
</a>
